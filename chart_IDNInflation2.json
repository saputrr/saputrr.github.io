{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
      "text": "Inflation",
      "anchor": "start",
      "subtitle": "CPI, % MoM | Source: BPS through ECO API",
      "fontSize": "16",
      "subtitleFontSize": "12",
      "font": "Afacad Flux",
      "color": "rgb(117, 78, 153)",
      "subtitleColor": "#333333"
    },
    "height": "250",
    "width": "container",
    "autosize": {
      "type": "fit",
      "contains": "padding"
    },
    "background": "#ffffff",
    "view": {
      "fill": "#ffffff",
      "strokeOpacity": 0
    },
    "data": {
      "url": "./data/IDNInflation.csv",
      "format": {
        "type": "csv",
        "parse": {
          "date": "date:'%d/%m/%Y'"
        }
      }
    },
    "layer": [
      {
        "mark": {
          "type": "line",
          "color": "rgb(117, 78, 153)",
          "strokeWidth": 2
        },
        "encoding": {
          "x": {
            "field": "date",
            "type": "temporal",
            "format": "%Y",
            "axis": {
              "title": "",
              "titleColor": "#122B39",
              "grid": false,
              "labelFont": "Afacad Flux",
              "labelColor": "#333333",
              "tickCount": "year"
            }
          },
          "y": {
            "field": "value",
            "type": "quantitative",
            "axis": {
              "title": "",
              "titleColor": "#122B39",
              "grid": false,
              "labelFont": "Afacad Flux",
              "labelColor": "#333333"
            }
          }
        }
      },
      {
        "mark": {
          "type": "rule",
          "strokeDash": [4, 4],
          "color": "rgb(117, 78, 153)",
          "strokeWidth": 1
        },
        "encoding": {
          "y": {
            "datum": 0,
            "type": "quantitative"
          }
        }
      },
      {
        "mark": {
          "type": "point",
          "filled": true,
          "size": 100,  // Make the hoverable point larger
          "color": "rgb(117, 78, 153)",
          "opacity": 0  // Make the points invisible for cleaner design
        },
        "encoding": {
          "x": {
            "field": "date",
            "type": "temporal"
          },
          "y": {
            "field": "value",
            "type": "quantitative"
          },
          "tooltip": [
            {
              "field": "date",
              "type": "temporal",
              "timeUnit": "month",  // Show month in the tooltip
              "title": "Month"
            },
            {
              "field": "value",
              "type": "quantitative",
              "title": "CPI (%)"
            }
          ]
        }
      }
    ],
    "config": {
      "axis": {
        "labelFont": "Afacad Flux",
        "titleFont": "Afacad Flux"
      },
      "legend": {
        "labelFont": "Afacad Flux",
        "titleFont": "Afacad Flux"
      }
    }
  }
  
