{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
      "text": "GDP growth",
      "anchor": "start",
      "subtitle": "Yearly, rate, % | Source: BPS through ECO API",
      "fontSize": 14,
      "subtitleFontSize": 12,
      "font": "Afacad Flux",
      "color": "rgb(117, 78, 153)",
      "subtitleColor": "#333333"
    },
    "height": 250,
    "width": "container",
    "autosize": {
      "type": "fit",
      "contains": "padding"
    },
    "background": "#ffffff",
    "view": {
      "fill": "#ffffff",
      "strokeOpacity": 0
    },
    "data": {
      "url": "https://api.economicsobservatory.com/idn/grow?vega",
      "format": {
        "type": "json"
      }
    },
    "layer": [
      {
        "mark": {
          "type": "rect",
          "color": "red",
          "opacity": 0.9
        },
        "encoding": {
          "x": {
            "datum": 1577836800000,  // Unix timestamp for Jan 1, 2020
            "type": "temporal",
            "timeUnit": "yearmonthdate"  // Format the timestamp to show readable dates
          },
          "x2": {
            "datum": 1640995200000,  // Unix timestamp for Dec 31, 2021
            "type": "temporal",
            "timeUnit": "yearmonthdate"
          },
          "y": {
            "value": 0
          },
          "y2": {
            "value": {"expr": "height"}
          }
        }
      },
      {
        "mark": {
          "type": "line",
          "color": "rgb(117, 78, 153)",
          "strokeWidth": 2
        },
        "encoding": {
          "x": {
            "field": "date",
            "type": "temporal",  // Treat Unix timestamps as temporal data
            "axis": {
              "title": "",
              "titleColor": "#333333",
              "grid": false,
              "labelFont": "Afacad Flux",
              "labelColor": "#333333"
            }
          },
          "y": {
            "field": "value",
            "type": "quantitative",
            "axis": {
              "title": "",
              "titleColor": "#333333",
              "grid": false,
              "labelFont": "Afacad Flux",
              "labelColor": "#333333"
            }
          }
        }
      },
      {
        "mark": {
          "type": "rule",
          "strokeDash": [4, 4],
          "color": "rgb(117, 78, 153)",
          "strokeWidth": 1
        },
        "encoding": {
          "y": {
            "datum": 0,
            "type": "quantitative"
          }
        }
      },
      {
        "mark": {
          "type": "text",
          "text": "Covid-19",
          "font": "Afacad Flux",
          "fontSize": 12,
          "dy": -10,
          "color": "red"
        },
        "encoding": {
          "x": {
            "datum": 1601510400000,  // Unix timestamp for mid-2020 (around June)
            "type": "temporal",
            "timeUnit": "yearmonthdate"
          },
          "y": {
            "datum": 8,
            "type": "quantitative"
          }
        }
      }
    ],
    "config": {
      "axis": {
        "labelFont": "Afacad Flux",
        "titleFont": "Afacad Flux"
      },
      "legend": {
        "labelFont": "Afacad Flux",
        "titleFont": "Afacad Flux"
      }
    }
  }
  